extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Compositor #{compositor.id}
    br
    .w3-container
      ul
        li
          b Id:
          |  #{compositor.id}
        li
          b Nome:
          = compositor.nome
        li
          b Data de Nascimento:
          |  #{compositor.dataNasc}
        li
          b Data de Óbito:
          |  #{compositor.dataObito}
        li
          b Período:&nbsp;
          a(href='/periodos/' + compositor.periodo)= periodo.nome
        p= compositor.bio
    br

    footer.w3-container.w3-teal
      address Gerado por EngWeb2024 em #{data} - 
        a(href='/compositores') [Voltar]
