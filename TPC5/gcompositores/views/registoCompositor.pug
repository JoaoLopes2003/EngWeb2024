extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1= titulo
            
        .w3-container
            br
            form.w3-container(method="POST")
                fieldset
                    legend Metadados
                    br
                    label Id
                    input.w3-input.w3-round(type="text" name="id")
                    br
                    label Nome
                    input.w3-input.w3-round(type="text" name="nome")
                    br
                    label Data de Nascimento
                    input.w3-input.w3-round(type="date" name="dataNasc")
                    br
                    label Data de Óbito
                    input.w3-input.w3-round(type="date" name="dataObito")
                    br
                    label Período
                    br
                    br
                    select.w3-input.w3-round(name="periodo")
                        for p in periodos
                            option(value=p.id)= p.nome
                    br
                    br
                    label Biografia
                    textarea.w3-input.w3-round(name="bio")
                br
                button.w3-btn.w3-purple.w3-mb-2(type="submit") Registar
        br

        footer.w3-container.w3-teal
            address Gerado por EngWeb2024 em #{data} - 
                a(href='/compositores') [Voltar]
